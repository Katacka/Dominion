<?xml version="1.0" encoding="utf-8"?>

<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0">
    <shape
        android:shape="rectangle">
        <solid
            android:color="#FFFFFFFF" />
        <!--
            EXTERNAL CITATION
                Date:       11 September 2018
                Problem:    Wanted to create a background for the player tabs
                Resource:
                    https://stackoverflow.com/questions/8203606/android-how-to-draw-a-border-to-a-linearlayout
                Solution: Used stroke and corners to create background
        -->
        <stroke
            android:color="@color/tabBackground"
            android:width="1dp" />
        <corners
            android:bottomRightRadius="3dp"
            android:topRightRadius="3dp" />
    </shape>
</rotate>